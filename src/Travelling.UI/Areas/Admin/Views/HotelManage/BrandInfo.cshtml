@using Travelling.ViewModel.Dto.Hotel
@using Travelling.ViewModel
@using Travelling.ViewModel.Travel
@using Travelling.ViewModel.Hotel
@using Travelling.Web.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_BaseAdminPage.cshtml";


}
@section header{
    <script type="text/javascript" src="~/Areas/Admin/js/hotelmanage.js"></script>
<link type="text/css" rel="stylesheet" href="~/Areas/Admin/js/ajaxfileupload/ajaxfileupload.css" />
<script type="text/javascript" src="~/Areas/Admin/js/ajaxfileupload/ajaxfileupload.js"></script>   
    <script type="text/javascript">
        $(document).ready(function () {
            //hotelcityinfosearch(1);
            HotelBrandInfoSearch(1);
        });
    </script>
}
@model PageObjectResult<HotelBrandDetailInfo>
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="#">控制面板</a>
            
        </li>
        <li>
            <a href="#">酒店管理</a>
        </li>
        <li class="active">品牌管理</li>
    </ul>
    <!-- .breadcrumb -->
    <div class="nav-search" id="nav-search">
        <form class="form-search">
            <span class="input-icon">
                <input placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" type="text">
                <i class="icon-search nav-search-icon"></i>
            </span>
        </form>
    </div>
    <!-- #nav-search -->
</div>
<div class="page-content">
    <div style="margin-bottom:5px;">
        <table style="width:95%;">
            <tr>
                <td width="80" align="right">品牌类型：</td>
                <td width="150" style="text-align:left;">
                    @Html.DropDownList("HotelBrandType", Html.CreateSelectList(typeof(HotelBrandType), ((int)HotelBrandType.All).ToString()))
                </td>
                <td width="80" align="right">品牌名称：</td>
                <td width="180">
                    <input type="text" class="input-large" placeholder="品牌名称" id="hotelbrandname">
                </td>
                
                <td width="80" align="right">是否热门：</td>
                <td width="100">
                    <select style="width:99%;" id="ishotbrand">
                        <option value="" selected="selected">&nbsp;全部</option>
                        <option value="1">是</option>
                        <option value="0">否</option>

                    </select>
                </td>
                <td width="100" align="right">是否查询推荐：</td>
                <td width="100">
                    <select style="width:99%;" id="issearchrecommend">
                        <option value="" selected="selected">&nbsp;全部</option>
                        <option value="1">已推荐</option>
                        <option value="0">未推荐</option>

                    </select>
                </td>
                <td align="center">
                    <button class="btn btn-sm btn-primary" type="button" onclick="HotelBrandInfoSearch(1);">查询</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="row" id="queryresult">

        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.page-content -->
@section scripts{
    <script type="text/javascript" src="~/Areas/Admin/assets/js/ace-extra.min.js"></script>
}


