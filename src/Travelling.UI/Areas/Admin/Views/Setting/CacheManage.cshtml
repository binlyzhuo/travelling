@{
    
    Layout = "~/Areas/Admin/Views/Shared/_BaseAdminPage.cshtml";
}
@using Travelling.Caching
@model IEnumerable<CacheObjectInfo>
    @section header{
        <script type="text/javascript" src="~/Areas/Admin/js/settingfunction.js"></script>
    }
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="#">控制面板</a>
            </li>
            <li>
                <a href="#">系统设置</a>
            </li>
            <li class="active">缓存管理</li>
        </ul>
        <!-- .breadcrumb -->
        <div class="nav-search" id="nav-search">
            <form class="form-search">
                <span class="input-icon">
                    <input placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" type="text">
                    <i class="icon-search nav-search-icon"></i>
                </span>
            </form>
        </div>
        <!-- #nav-search -->
    </div>
    <div class="page-content">
        <div class="page-header">
            <h1>
                缓存管理
                <small>
                    <i class="icon-double-angle-right"></i>
                    动态管理网站服务器缓存
                </small>
            </h1>
        </div>
        <div class="row" id="queryresult">
            <input type="button" value="清除所有缓存" class="btn btn-xs btn-danger" />
            <div class="table-responsive" style="margin-top:5px;width:90%;" >
                <table class="table table-striped table-bordered table-hover" id="sample-table-1">
                    <thead>
                        <tr>
                            <th>缓存键值</th>
                            <th>缓存键值</th>
                            <th>描述信息</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach (var k in Model)
                        {
                            <tr>
                                
                                <td>
                                    @k.CacheKeyName
                                </td>
                                <td>@k.CacheKeyValue</td>
                                <td>@k.CacheKeyRemark</td>
                                <td>
                                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">

                                        <button class="btn btn-xs btn-danger" onclick="cachesetting('@k.CacheKeyValue');">
                                            <i class="icon-trash bigger-120"></i>
                                        </button>

                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
