@using Travelling.OpenApiEntity.TC.Hotel
@using Travelling.FrameWork
@using Travelling.OpenApiEntity.TC.Hotel.Module
@model GetCommentListReturnEntity
<div class="HdBd">
    <h2 class="Hd">游客点评</h2>

</div>
<ul class="ActivityList">
    @foreach (var comment in Model.Comments)
    {
        <li style="border-bottom: 1px dashed #ccc; line-height:25px;">
            <ul>
                <li>游客：<span style="color:#f60;">@EnumHelper.GetDescriptionFromEnumValue((CommentScoreType)comment.overallRating)</span> @comment.content</li>
                <li>@comment.createDate</li>
            </ul>
        </li>
    }
    
</ul>