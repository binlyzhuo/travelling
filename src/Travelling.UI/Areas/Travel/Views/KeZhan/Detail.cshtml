                    <div class="HotelImage" data="@Html.Raw(imgBaseUrl+mediaImgs[i].imageUrl)" style="background-image:url('@Html.Raw(imgBaseUrl+mediaImgs[i].imageUrl)'); opacity: 1;" data-index="0"></div>
