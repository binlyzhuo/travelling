            <h1>@Model.cityName</h1>
        </div>
        <div class="htl_info_com htl_pic_map layoutfix">
            <div class="htl_info">
                <div class="price_box">
                    <p class="staring_price">
                        <span style="font-weight:bold;color:#f60; font-size:large;">￥@Model.lowestPrice</span>
